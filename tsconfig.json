{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": ["es2018", "dom"],
    "paths": {
      "udutha-ui": ["dist/udutha-ui/udutha-ui", "dist/udutha-ui"],
      "@foa/button": ["dist/foa/button/foa-button", "dist/foa/button"],
      "@foa/udutha": ["dist/foa/udutha/foa-udutha", "dist/foa/udutha"],
      "@foa/udutha-ui": [
        "dist/foa/udutha-ui/foa-udutha-ui",
        "dist/foa/udutha-ui"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
